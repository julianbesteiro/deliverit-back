{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "config/*.ts",
    "src/*.ts",
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
